<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/channel"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:focusable="false">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginTop="3dip"
		android:layout_marginBottom="3dip">
		<TextView android:id="@+id/channel_name" 
			android:textSize="24dip"
			android:textColor="#ffffffff"
			android:textScaleX="1.2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginLeft="5dip"/>
		<View android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"/>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<com.we.android.ifm.LevelAnimation 
					android:id="@+id/playindicator1" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="1dip"/>
				<com.we.android.ifm.LevelAnimation 
					android:id="@+id/playindicator2" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dip"/>	
			</LinearLayout>
	</LinearLayout>
	<View android:id="@+id/titleseperator"
		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:gravity="center_horizontal" />
	<LinearLayout android:id="@+id/wtf" 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dip"
		android:layout_marginBottom="12dip">
		<ImageView android:id="@+id/cover" 
			android:layout_width="70dip"
			android:layout_height="70dip" 
			android:layout_marginLeft="10dip" />
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:layout_marginLeft="10dip"
			android:paddingRight="10dip">
			<TextView android:id="@+id/artist" 
				android:textSize="15dip"
				android:textColor="#000000" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/label" 
				android:textSize="11dip"
				android:textColor="#000000" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
	
